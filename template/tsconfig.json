{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["dom"],
    "types": ["node", "mocha"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
